rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'vikramkanagaraj@gmail.com',
        'vokkaligasangam@gmail.com',
        'sureshgowder@gmail.com',
        'deeppak.kambarayar@gmail.com',
        'krishnakumarmuthian@gmail.com',
        'muru100@gmail.com',
        'vanithavijay@gmail.com',
        'raghuraja@gmail.com',
        'jegan.thiru@gmail.com',
        'skparamasivam@gmail.com',
        'drnandeesh@hotmail.com',
        'poornisaran@gmail.com',
        'thirumudi@gmail.com'
      ];
    }
    
    // Membership applications - users can create their own, admins can read/update all
    match /membershipApplications/{docId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Members directory - authenticated users can read and write their own
    match /members/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Help requests - anyone can create (no auth required), only admins can read/update
    match /helpRequests/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Contact messages - anyone can create (no auth required), only admins can read
    match /contactMessages/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
